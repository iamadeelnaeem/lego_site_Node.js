<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lego Collection</title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <!-- Include the navbar partial with an empty "page" value -->
  <%- include('partials/navbar', { page: '' }) %>

  <div class="container mx-auto p-4">

    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set:<%= set.name %></h1>
          <p class="py-6">Use the below form to update the <%= set.name %> set </p>
        </div>
      </div>
    </div>

    <br />

    <form action="/lego/editSet/<%= set.set_num %>" method="post" >
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 gap-y-0">
            <!-- Name -->
              <div>
                <div class="mb-6">
                  <label for="name" class="block text-gray-700 font-medium">Name</label>
                    <input type="text" id="name" name="name" value="<%= set.name %>" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
                <!-- Year -->
                <div class="mb-6">
                    <label for="year" class="block text-gray-700 font-medium">Year</label>
                    <input type="number" id="year" name="year" value="<%= set.year %>" required
                        class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                </div>
             </div>
    
                <div>
                    <!-- Number of Parts -->
                    <div class="mb-6">
                        <label for="num_parts" class="block text-gray-700 font-medium">Number of Parts</label>
                        <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required
                            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                    </div>
                <!-- Image URL -->
                    <div class="mb-6">
                        <label for="img_url" class="block text-gray-700 font-medium">Image URL</label>
                            <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" required
                            class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300">
                    </div>
                </div> 
                <div>
                    <div class="mb-6">
                    <!-- Theme Dropdown -->
                        <div class="mb-6 relative">
                            <label for="theme_id" class="block text-gray-700 font-medium">Theme</label>
                            <select id="theme_id" name="theme_id" required class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 appearance-none">
                            <!-- Loop through themes to generate options -->
                            <% themes.forEach(theme => { %>
                                <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                                <%= theme.name %>
                                </option>
                            <% }) %>
                            </select>
                        </div>
                        
                            <!-- Set Number -->
                            <div class="mb-6">
                                <label for="set_num" class="block text-gray-700 font-medium">Set Number</label>
                                <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly
                                class="w-full border border-gray-300 rounded-md px-3 py-2 focus:border-blue-300 cursor-not-allowed">
                            </div>
                        </div> 
                      </div>
                      <div class="mt-6">
                        <button type="submit" class="btn btn-success">Update Set</button>
                        <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Set</a>
                      </div>
                </form>
  </div>

</body>

</html>
